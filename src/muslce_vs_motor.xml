<mujoco model="test">
    <compiler coordinate="global"/>

    <default>
        <geom rgba=".9 .7 .1 1" size="0.01"/>
        <site type="sphere" rgba=".9 .9 .9 1" size="0.005"/>
        <joint type="hinge" axis="0 1 0" limited="true" range="-30 60" solimplimit="0.95 0.95 0.1"/>
    </default>

    <visual>
        <headlight diffuse=".7 .7 .7"/>
    </visual>

    <worldbody>
        <site name="s0" pos="0 0.01 0.4"/>
        <site name="s1" pos="0 -0.01 0.4"/>

        <body>
            <geom type="capsule" fromto="0 0 0.3  0.2 0 0.3"/>
            <geom name="g1" type="cylinder" fromto="0.0 0.015 0.3  0.0 -0.015 0.3" size="0.02" rgba=".3 .9 .3 .4"/>
            <joint pos="0 0 0.3"/>
            <site name="s2" pos="0.1 0 0.31"/>
        </body>
    </worldbody>

    <tendon>
        <spatial name="red" width="0.002" rgba=".95 .3 .3 1" limited="true" range="0 0.33">
            <site site="s0"/>
            <geom geom="g1"/>
            <site site="s2"/>
        </spatial>
        <spatial name="green" width="0.002" rgba=".3 .95 .3 1" limited="true" range="0 0.33">
            <site site="s1"/>
            <geom geom="g1"/>
            <site site="s2"/>
        </spatial>
    </tendon>
    <actuator>
        <motor name="motor" tendon="red" gear="2"/>
        <muscle name="muscle" tendon="green"/>
    </actuator>
</mujoco>
